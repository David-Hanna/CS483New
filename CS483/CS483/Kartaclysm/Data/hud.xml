<!-- Heads Up Display (HUD) -->
<!-- Author: Bradley Cooper -->

<GameObject>
  
  <Children>
    <!-- Kart Ability 1 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="40" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="KartAbility1" />
		      <MTLFileName path="Assets/Hud/Abilities/boost.mtl"/>
		      <MaterialName name="boost"/>
	      </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Kart Ability 2 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="55" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="KartAbility2" />
          <MTLFileName path="Assets/Hud/Abilities/null.mtl"/>
          <MaterialName name="null_ability"/>
        </GOC_HUD_Ability>
      </Components>
    </GameObject>
    
    <!-- Driver Ability 1 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="70" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="DriverAbility1" />
          <MTLFileName path="Assets/Hud/Abilities/null.mtl"/>
          <MaterialName name="null_ability"/>
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Driver Ability 2 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="85" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="DriverAbility2" />
          <MTLFileName path="Assets/Hud/Abilities/null.mtl"/>
          <MaterialName name="null_ability"/>
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Position -->
    <GameObject>
      <Transform>
        <Scale x="16.0" y="16.0" z="1.0" />
        <Translation x="-80.0" y="-75.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Position>
          <PositionFilePrefix path="Assets/Hud/Positions/" />
        </GOC_HUD_Position>
      </Components>
    </GameObject>

    <!-- Race Timer -->
    <GameObject>
      <Transform>
        <Translation x="80.0" y="95.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_RaceTimer>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <LabelOffset value="-40.0"/>
        </GOC_HUD_RaceTimer>
      </Components>
    </GameObject>

    <!-- Lap Count -->
    <GameObject>
      <Transform>
        <Translation x="85.0" y="85.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_LapCount>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <LabelOffset value="-30.0"/>
        </GOC_HUD_LapCount>
      </Components>
    </GameObject>

    <!-- FPS -->
    <GameObject>
      <Transform>
        <Translation x="-95.0" y="96.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Fps>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
        </GOC_HUD_Fps>
      </Components>
    </GameObject>

    <!-- Wrong way -->
    <GameObject>
      <Transform>
        <Translation x="0" y="30.0" z="0.0" />
        <Scale x="16.0" y="16.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <MTLFileName path="Assets/Hud/Popups/wrong_way.mtl"/>
          <MaterialName name="wrong_way"/>
          <Event value="Player0_WrongWay_HUD"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>

    <!-- Pause -->
    <GameObject>
      <Transform>
        <Translation x="0.0" y="-10.0" z="0.0" />
        <Scale x="16.0" y="16.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <MTLFileName path="Assets/Hud/Popups/paused.mtl"/>
          <MaterialName name="paused"/>
          <Event value="Pause_HUD"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>
    
  </Children>
  
</GameObject>