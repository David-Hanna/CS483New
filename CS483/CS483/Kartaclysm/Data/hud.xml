<!-- Heads Up Display (HUD) -->
<!-- Author: Bradley Cooper -->

<GameObject>
  
  <Children>
    <!-- Kart Ability 1 -->
    <GameObject>
      <Transform>
        <Scale x="10.0" y="10.0" z="1.0" />
        <Translation x="40.0" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="KartAbility1" />
		      <MTLFileName path="Assets/Hud/Abilities/boost.mtl"/>
		      <MaterialName name="boost"/>
	      </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Kart Ability 2 -->
    <GameObject>
      <Transform>
        <Scale x="10.0" y="10.0" z="1.0" />
        <Translation x="55.0" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="KartAbility2" />
          <MTLFileName path="Assets/Hud/Abilities/null.mtl"/>
          <MaterialName name="null_ability"/>
        </GOC_HUD_Ability>
      </Components>
    </GameObject>
    
    <!-- Driver Ability 1 -->
    <GameObject>
      <Transform>
        <Scale x="10.0" y="10.0" z="1.0" />
        <Translation x="70.0" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="DriverAbility1" />
          <MTLFileName path="Assets/Hud/Abilities/null.mtl"/>
          <MaterialName name="null_ability"/>
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Driver Ability 2 -->
    <GameObject>
      <Transform>
        <Scale x="10.0" y="10.0" z="1.0" />
        <Translation x="85.0" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="DriverAbility2" />
          <MTLFileName path="Assets/Hud/Abilities/null.mtl"/>
          <MaterialName name="null_ability"/>
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Position -->
    <GameObject>
      <Transform>
        <Scale x="10.0" y="10.0" z="1.0" />
        <Translation x="-85.0" y="-80.0" z="0.0" />
      </Transform>
      <Components>
        <GOC_HUD_Position>
          <PositionFilePrefix path="Assets/Hud/Positions/" />
        </GOC_HUD_Position>
      </Components>
    </GameObject>

    <!-- Race Timer -->
    <GameObject>
      <Transform>
        <Translation x="79.0" y="93.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_RaceTimer>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <LabelOffset value="-40.0"/>
        </GOC_HUD_RaceTimer>
      </Components>
    </GameObject>

    <!-- Lap Count -->
    <GameObject>
      <Transform>
        <Translation x="85.0" y="83.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_LapCount>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <LabelOffset value="-30.0"/>
        </GOC_HUD_LapCount>
      </Components>
    </GameObject>

    <!-- FPS -->
    <GameObject>
      <Transform>
        <Translation x="-95.0" y="96.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Fps>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
        </GOC_HUD_Fps>
      </Components>
    </GameObject>

    <!-- Wrong way -->
    <GameObject>
      <Transform>
        <Translation x="-20" y="10.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Event value="Player0_WrongWay_HUD"/>
          <Message value="WRONG WAY"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>

    <!-- Pause -->
    <GameObject>
      <Transform>
        <Translation x="-15.0" y="-10.0" z="0.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Event value="Pause_HUD"/>
          <Message value="PAUSED"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>
    
  </Children>
  
</GameObject>