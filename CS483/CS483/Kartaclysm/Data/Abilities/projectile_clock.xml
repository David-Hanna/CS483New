<!-- Projectile for Clockmaker's Clock Bomb Ability -->
<!-- Author: Bradley Cooper -->

<GameObject>

  <Transform>
    <Scale x="2" y="2" z="2" />
  </Transform>
  
  <Components>

    <GOC_3DModel>
      <OBJFileName path="Assets/Abilities/bomb.obj"/>
    </GOC_3DModel>

    <GOC_SphereCollider>
      <Offset x="0" y="0" z="0" />
      <Sphere radius="1.0" />
      <Physics applies="false" />
    </GOC_SphereCollider>

    <GOC_Projectile>
      <FriendlyFire value="false" />
      <BlastXML path="CS483/CS483/Kartaclysm/Data/Abilities/blast_clock.xml" />
    </GOC_Projectile>

    <GOC_SimplePhysics>
      <Speed value="20.0" />
      <Friction value="10.0" />
      <VerticalSpeed value="4.0" />
    </GOC_SimplePhysics>

    <GOC_SelfDestruct>
      <Timer value="1.5" />
      <Collision tags="Projectile" />
    </GOC_SelfDestruct>

  </Components>

  <Tags>
  	<Tag value="Harmful"/>
    <Tag value="Projectile"/>
  </Tags>
</GameObject>