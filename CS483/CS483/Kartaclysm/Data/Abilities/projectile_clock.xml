<GameObject>

  <Transform>
    <Scale x="0.5" y="0.5" z="0.5" />
  </Transform>
  
  <Components>

    <GOC_3DModel>
      <!--<OBJFileName path="Assets/Abilities/bowling_ball.obj"/>-->
      <OBJFileName path="Assets/box/box.obj"/>
    </GOC_3DModel>

    <GOC_SphereCollider>
      <Offset x="0" y="0" z="0" />
      <Sphere radius="1.0" />
      <Physics applies="false" />
    </GOC_SphereCollider>

    <GOC_Projectile>
      <FriendlyFire value="false" />
      <BlastXML path="CS483/CS483/Kartaclysm/Data/Abilities/blast_clock.xml" />
    </GOC_Projectile>

    <GOC_SimplePhysics>
      <Speed value="0.5" />
      <Friction value="0.0" />
    </GOC_SimplePhysics>

    <GOC_SelfDestruct>
      <Timer value="5.0" />
      <Collision tags="Wall,Projectile" />
    </GOC_SelfDestruct>

  </Components>

  <Tags>
  	<Tag value="Harmful"/>
    <Tag value="Projectile"/>
  </Tags>
</GameObject>