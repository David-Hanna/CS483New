<!-- Heads Up Display (HUD) -->
<!-- Author: Bradley Cooper -->

<GameObject>
  
  <Children>    
    <!-- Driver Ability 1 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="640" y="-80.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="DriverAbility1" />
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Driver Ability 2 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="655" y="-80.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="DriverAbility2" />
        </GOC_HUD_Ability>
      </Components>
    </GameObject>
    
    <!-- Kart Ability 1 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="670" y="-80.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="KartAbility1" />
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Kart Ability 2 -->
    <GameObject>
      <Transform>
        <Scale x="8.0" y="12.0" z="1.0" />
        <Translation x="685" y="-80.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Ability>
          <FontFile path="Assets/Hud/Fonts/Times_New_Roman_16.fnt"/>
          <Ability name="KartAbility2" />
        </GOC_HUD_Ability>
      </Components>
    </GameObject>

    <!-- Position -->
    <GameObject>
      <Transform>
        <Scale x="16.0" y="16.0" z="1.0" />
        <Translation x="520.0" y="-75.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Position>
          <PositionFilePrefix path="Assets/Hud/Positions/" />
        </GOC_HUD_Position>
      </Components>
    </GameObject>

    <!-- Race Timer -->
    <GameObject>
      <Transform>
        <Translation x="678.0" y="95.0" z="1.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_RaceTimer>
          <FontFile path="Assets/Hud/Fonts/Verdana_16.fnt"/>
          <LabelOffset value="-42.0"/>
        </GOC_HUD_RaceTimer>
      </Components>
    </GameObject>

    <!-- Lap Count -->
    <GameObject>
      <Transform>
        <Translation x="685.0" y="85.0" z="1.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_LapCount>
          <FontFile path="Assets/Hud/Fonts/Verdana_16.fnt"/>
          <LabelOffset value="-33.0"/>
        </GOC_HUD_LapCount>
      </Components>
    </GameObject>

    <!-- Countdown -->
    <GameObject>
      <Transform>
        <Translation x="598.0" y="48.0" z="1.0" />
        <Scale x="0.5" y="0.5" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Countdown>
          <FontFile path="Assets/Hud/Fonts/Verdana_16.fnt"/>
        </GOC_HUD_Countdown>
      </Components>
    </GameObject>

    <!-- Wrong way -->
    <GameObject>
      <Transform>
        <Translation x="600" y="30.0" z="1.0" />
        <Scale x="20.0" y="20.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <MTLFileName path="Assets/Hud/Popups/wrong_way.mtl"/>
          <MaterialName name="wrong_way"/>
          <Event value="PlayerX_HUD_WrongWay"/>
          <Delay value="2.0"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>

    <!-- Pause -->
    <GameObject>
      <Transform>
        <Translation x="600.0" y="-10.0" z="1.0" />
        <Scale x="16.0" y="16.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <MTLFileName path="Assets/Hud/Popups/paused.mtl"/>
          <MaterialName name="paused"/>
          <Event value="Pause_HUD"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>

    <!-- Slow Effect -->
    <GameObject>
      <Transform>
        <Translation x="600.0" y="-80.0" z="0.0" />
        <Scale x="16.0" y="16.0" z="1.0" />
      </Transform>
      <Components>
        <GOC_HUD_Popup>
          <MTLFileName path="Assets/Hud/Popups/slow.mtl"/>
          <MaterialName name="slow"/>
          <Event value="PlayerX_HUD_Slow"/>
        </GOC_HUD_Popup>
      </Components>
    </GameObject>
    
  </Children>
  
</GameObject>
